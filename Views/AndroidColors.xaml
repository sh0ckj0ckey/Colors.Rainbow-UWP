                    </Grid>
                    <Grid Height="auto" Width="auto">
                        <Ellipse Height="62" Width="62" Margin="13" Fill="#9E9E9E"/>
                        <TextBlock Foreground="White" Text="Grey" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button x:Name="GreyButton" Style="{StaticResource EllipseBtn}" BorderThickness="0" Height="64" Width="64" Margin="12" Background="#9E9E9E" ToolTipService.ToolTip="Grey" Click="GreyButton_Click"/>
                    </Grid>
                    <Grid Height="auto" Width="auto">
                        <Ellipse Height="62" Width="62" Margin="13" Fill="#607D8B"/>
                        <TextBlock Foreground="White" Text="Blue&#13;Grey" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button x:Name="BlueGreyButton" Style="{StaticResource EllipseBtn}" BorderThickness="0" Height="64" Width="64" Margin="12" Background="#607D8B" ToolTipService.ToolTip="Blue Grey" Click="BlueGreyButton_Click"/>
